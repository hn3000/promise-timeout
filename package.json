{
  "name": "@hn3000/promise-timeout",
  "version": "1.0.1",
  "description": "simple timed promises",
  "keywords": [
    "promise",
    "promises",
    "timeout"
  ],
  "main": "out/src/index.js",
  "types": "out/src/index.d.ts",
  "scripts": {
    "prepare": "tsc --build --force tsconfig.test.json",
    "pretest": "tsc --build --force tsconfig.test.json",
    "test": "mocha out/test/allTests.js",
    "cover": "nyc npm test"
  },
  "author": "Harald Niesche",
  "repository": {
    "github": "https://github.com/hn3000/promise-timeout"
  },
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^8.0.1",
    "nyc": "^14.1.1",
    "typescript": "^3.9.7"
  },
  "files": [
    "out/src"
  ],
  "nyc": {
    "all": false,
    "sourceMap": true,
    "instrument": true,
    "excludeAfterRemap": true,
    "extension": [
      ".js",
      ".ts"
    ],
    "include": [
      "src/*.ts",
      "out/src/*.js"
    ],
    "exclude": [
      "test/**"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ]
  }
}
